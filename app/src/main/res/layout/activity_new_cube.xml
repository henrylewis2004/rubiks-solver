<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.NewCubeActivity">

    <Button
        android:id="@+id/newCubeBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="301dp"
        android:text="Back"
        app:layout_constraintBottom_toTopOf="@+id/newCubeInstructionText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/newCubeInstructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="571dp"
        android:text="WHITE face with GREEN on bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newCubeBackButton" />

    <Button
        android:id="@+id/nextFaceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="141dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="35dp"
        android:text="Next Face ->"
        app:layout_constraintBottom_toTopOf="@+id/newCubeCamButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newCubeFace" />

    <Button
        android:id="@+id/newCubeCamButton"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_marginStart="158dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="124dp"
        android:textSize="8sp"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconGravity="textTop"
        app:iconSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/newCubeFace"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/nextFaceButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newCubeInstructionText">

        <ImageView
            android:id="@+id/cubeFace22"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cubeFace21"
            app:layout_constraintTop_toBottomOf="@+id/cubeFace12"
            app:srcCompat="@android:drawable/screen_background_light" />

        <ImageView
            android:id="@+id/cubeFace21"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cubeFace22"
            app:layout_constraintStart_toEndOf="@+id/cubeFace20"
            app:layout_constraintTop_toBottomOf="@+id/cubeFace11"
            app:srcCompat="@android:drawable/screen_background_light" />

        <ImageView
            android:id="@+id/cubeFace20"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cubeFace21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cubeFace10"
            app:srcCompat="@android:drawable/screen_background_light" />

        <ImageView
            android:id="@+id/cubeFace12"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cubeFace11"
            app:layout_constraintTop_toBottomOf="@+id/cubeFace02"
            app:srcCompat="@android:drawable/screen_background_light" />

        <ImageView
            android:id="@+id/cubeFace11"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/cubeFace12"
            app:layout_constraintStart_toEndOf="@+id/cubeFace10"
            app:layout_constraintTop_toBottomOf="@+id/cubeFace01"
            app:srcCompat="@android:drawable/screen_background_light" />

        <ImageView
            android:id="@+id/cubeFace10"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/cubeFace20"
            app:layout_constraintEnd_toStartOf="@+id/cubeFace11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cubeFace00"
            app:srcCompat="@android:drawable/screen_background_light" />

        <ImageView
            android:id="@+id/cubeFace00"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/cubeFace10"
            app:layout_constraintEnd_toStartOf="@+id/cubeFace01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/screen_background_light" />

        <ImageView
            android:id="@+id/cubeFace01"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/cubeFace11"
            app:layout_constraintEnd_toStartOf="@+id/cubeFace02"
            app:layout_constraintStart_toEndOf="@+id/cubeFace00"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/screen_background_light" />

        <ImageView
            android:id="@+id/cubeFace02"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/cubeFace12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cubeFace01"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/screen_background_light" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>